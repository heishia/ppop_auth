// Prisma Schema for PPOP Cloud Auth Server
// Database: Supabase (PostgreSQL)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// 사용자 테이블
model User {
  id            String     @id @default(uuid())
  email         String     @unique
  passwordHash  String     @map("password_hash")
  emailVerified Boolean    @default(false) @map("email_verified")
  status        UserStatus @default(ACTIVE)
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  // 확장 프로필 필드
  name          String?
  birthdate     String?    // YYMMDD 형식
  phone         String?    @unique
  phoneVerified Boolean    @default(false) @map("phone_verified")

  refreshTokens      RefreshToken[]
  oauthAccounts      OAuthAccount[]
  authorizationCodes AuthorizationCode[]
  subscriptions      Subscription[]

  @@map("users")
}

enum UserStatus {
  ACTIVE
  BANNED
  PENDING
}

// Refresh Token 테이블
model RefreshToken {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  tokenHash  String   @map("token_hash")
  deviceInfo String?  @map("device_info")
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tokenHash])
  @@map("refresh_tokens")
}

// OAuth 소셜 연동 테이블
model OAuthAccount {
  id             String   @id @default(uuid())
  userId         String   @map("user_id")
  provider       String   // google, github, kakao
  providerUserId String   @map("provider_user_id")
  createdAt      DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerUserId])
  @@index([userId])
  @@map("oauth_accounts")
}

// OAuth 클라이언트 (SaaS 앱 등록)
model OAuthClient {
  id               String   @id @default(uuid())
  clientId         String   @unique @map("client_id")
  clientSecretHash String   @map("client_secret_hash")
  name             String
  redirectUris     String[] @map("redirect_uris")
  createdAt        DateTime @default(now()) @map("created_at")

  @@map("oauth_clients")
}

// Authorization Code (OAuth2 인가 코드)
model AuthorizationCode {
  id          String   @id @default(uuid())
  code        String   @unique
  userId      String   @map("user_id")
  clientId    String   @map("client_id")
  redirectUri String   @map("redirect_uri")
  state       String?
  expiresAt   DateTime @map("expires_at")
  used        Boolean  @default(false)
  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([code])
  @@map("authorization_codes")
}

// SMS 인증 코드 테이블
model SmsVerification {
  id        String   @id @default(uuid())
  phone     String
  code      String
  attempts  Int      @default(0)  // 인증 시도 횟수
  expiresAt DateTime @map("expires_at")
  verified  Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  @@index([phone])
  @@index([phone, code])
  @@map("sms_verifications")
}

// SMS 발송 제한 테이블 (Rate Limiting)
model SmsRateLimit {
  id          String   @id @default(uuid())
  phone       String   @unique
  dailyCount  Int      @default(0) @map("daily_count")   // 일일 발송 횟수
  lastSentAt  DateTime? @map("last_sent_at")             // 마지막 발송 시간
  blockedUntil DateTime? @map("blocked_until")           // 차단 해제 시간
  resetAt     DateTime @map("reset_at")                  // 일일 카운트 리셋 시간
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("sms_rate_limits")
}

// 서비스(상품) 테이블
model Service {
  id               String   @id @default(uuid())
  code             String   @unique                      // 서비스 코드 (예: 'ppop-editor')
  name             String                                // 서비스 이름
  description      String?                               // 서비스 설명
  gumroadProductId String?  @map("gumroad_product_id")   // Gumroad 상품 ID
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  @@map("services")
}

// 사용자 구독 테이블
model Subscription {
  id            String             @id @default(uuid())
  userId        String             @map("user_id")
  serviceCode   String             @map("service_code")  // 서비스 코드
  plan          SubscriptionPlan   @default(NONE)        // 플랜 종류
  status        SubscriptionStatus @default(ACTIVE)      // 구독 상태
  gumroadSaleId String?            @map("gumroad_sale_id") // Gumroad 구매 ID
  purchasedAt   DateTime?          @map("purchased_at")  // 구매일
  expiresAt     DateTime?          @map("expires_at")    // 만료일 (null이면 평생)
  createdAt     DateTime           @default(now()) @map("created_at")
  updatedAt     DateTime           @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, serviceCode])
  @@index([userId])
  @@index([serviceCode])
  @@map("subscriptions")
}

enum SubscriptionPlan {
  NONE       // 서비스 사용 불가
  BASIC      // 무료 (회원가입 + 후기 유도)
  PRO        // 유료
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
}
